@model UBUGenTreeMVC.Models.AnadirAncestroViewModel

@{
    ViewData["Title"] = "Añadir ancestros y sucesores";
}

<h1>Añadir ancestros</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AnadirAncestro">


            <div class="form-group">
                <label class="control-label">Nombre del usuario</label>
                <input asp-for="usuario.Nombre" class="form-control" />
                <span asp-validation-for="usuario.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Primer apellido del usuario</label>
                <input asp-for="usuario.Apellido1" class="form-control" />
                <span asp-validation-for="usuario.Apellido1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Segundo apellido del usuario</label>
                <input asp-for="usuario.Apellido2" class="form-control" />
                <span asp-validation-for="usuario.Apellido2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Localidad</label>
                <input asp-for="usuario.Localidad" class="form-control" />
                <span asp-validation-for="usuario.Localidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de nacimiento</label>
                <input asp-for="usuario.FechaNac" class="form-control" />
                <span asp-validation-for="usuario.FechaNac" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="control-label">Nombre del padre</label>
                <input asp-for="padre.Nombre" class="form-control" />
                <span asp-validation-for="padre.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Primer apellido del padre</label>
                <input asp-for="padre.Apellido1" class="form-control" />
                <span asp-validation-for="padre.Apellido1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Segundo apellido del padre</label>
                <input asp-for="padre.Apellido2" class="form-control" />
                <span asp-validation-for="padre.Apellido2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Localidad</label>
                <input asp-for="padre.Localidad" class="form-control" />
                <span asp-validation-for="padre.Localidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de nacimiento</label>
                <input asp-for="usuario.FechaNac" class="form-control" />
                <span asp-validation-for="padre.FechaNac" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="control-label">Nombre de la madre</label>
                <input asp-for="madre.Nombre" class="form-control" />
                <span asp-validation-for="madre.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Primer apellido de la madre</label>
                <input asp-for="madre.Apellido1" class="form-control" />
                <span asp-validation-for="madre.Apellido1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Segundo apellido de la madre</label>
                <input asp-for="madre.Apellido2" class="form-control" />
                <span asp-validation-for="madre.Apellido2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Localidad</label>
                <input asp-for="madre.Localidad" class="form-control" />
                <span asp-validation-for="madre.Localidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de nacimiento</label>
                <input asp-for="madre.FechaNac" class="form-control" />
                <span asp-validation-for="madre.FechaNac" class="text-danger"></span>
            </div>


            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
